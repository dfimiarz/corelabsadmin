{% extends 'CoreLABSBundle:default:admin.base.html.twig' %}

{% block title %}CoreLABS - Manage users{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 panel-header" >
                <span class="h1">CoreLABS Users</span>
            </div>
            <div class="col-sm-12" >
                <form class="form-inline" method="get" action="{{ path("manage_users")}}">
                    <div class="form-group">
                        <label for="searchtypeselect">Search by:</label>
                        <select class="form-control"  id="searchtypeselect" name="s_type">
                            <option value="un">Username</option>
                            <option value="fn">Last Name</option>
                            <option value="ln">First Name</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="s_term" value="{{ s_term }}"/>
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.uname }}</td>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.phone }}</td>
                                        <td><a href="#" class="btn btn-info btn-sm" role="button">Details</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}   
 
